<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.6" method="upgrade">
	<name>Random Article</name>
	<author>Artur Alves</author>
	<authorEmail>artur.ze.alves@gmail.com</authorEmail>
