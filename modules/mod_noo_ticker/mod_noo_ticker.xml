<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" version="3.0" client="site" method="upgrade">
	<name>mod_noo_ticker</name>
	<author>NooTheme</author>
	<creationDate>June 2013</creationDate>
	<copyright>Copyright (C) 2013 NooTheme. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@nootheme.com</authorEmail>
	<authorUrl>http://nootheme.com</authorUrl>
	<version>1.0.2</version>
	<description>MOD_NOO_TICKER_DESCRIPTION</description>
	<files>
		<filename module="mod_noo_ticker">mod_noo_ticker.php</filename>
		<folder>tmpl</folder>
		<folder>assets</folder>
		<folder>elements</folder>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<filename>mod_noo_ticker.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_noo_ticker.ini</language>
		<language tag="en-GB">en-GB.mod_noo_ticker.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			
			<fieldset name="basic">
				<field
						name="display_form"
						type="jslist"
						size="10"
						default="joomla_content"
						label="MOD_NOO_TICKER_FIELD_CONTENT_SOURCE_LABEL"
						description="MOD_NOO_TICKER_FIELD_CONTENT_SOURCE_DESC" >
						<option value="joomla_content" sub_fields="catid,count,sort_order_field,sort_order">MOD_NOO_JOOMLA_CONTENT</option>
						<option value="rss_link" sub_fields="rss_link">MOD_NOO_RSS_LINK</option>
						<option value="k2" sub_fields="k2catid,count,sort_order_field,sort_order">MOD_NOO_K2</option>
						<option value="external_link" sub_fields="external_links">MOD_NOO_EXTERNAL_LINKS</option>
					</field>
				<field
					name="catid"
					type="category"
					extension="com_content"
					multiple="true"
					size="10"
					default=""
					label="JCATEGORY"
					description="MOD_NOO_TICKER_FIELD_CATEGORY_DESC" >
					<option value="">JOPTION_ALL_CATEGORIES</option>
				</field>
				<field
					name="k2catid"
					type="k2category"
					multiple="true"
					size="10"
					default=""
					label="MOD_NOO_TICKER_FIELD_CATEGORY_LABEL"
					description="MOD_NOO_TICKER_FIELD_CATEGORY_DESC" >
					<option value="">JOPTION_ALL_CATEGORIES</option>
				</field>
				<field
					name="count"
					type="text"
					default="5"
					label="MOD_NOO_TICKER_FIELD_COUNT_LABEL"
					description="MOD_NOO_TICKER_FIELD_COUNT_DESC" />
				<field 
					name="sort_order_field" 
					type="list" default="created"
					label="MOD_NOO_TICKER_FIELD_SORT_ORDER_BY_LABEL" 
					description="MOD_NOO_TICKER_FIELD_SORT_ORDER_BY_DESC">
					<!--
					<option value="created">Date</option>
					<option value="ordering">Order</option>
					<option value="hits">Hits</option>
					-->
					<option value="id">NOO_SORT_DEFAULT</option>
					<option value="date">NOO_SORT_DATE</option>
					<option value="rdate">NOO_SORT_RDATE</option>
					<option value="publish_up">NOO_SORT_PUBLISH_UP</option>
					<option value="alpha">NOO_SORT_ALPHA</option>
					<option value="ralpha">NOO_SORT_RALPHA</option>
					<option value="order">NOO_SORT_ORDER</option>
					<option value="rorder">NOO_SORT_RORDER</option>
					<option value="hits">NOO_SORT_HITS</option>
					<option value="modified">NOO_SORT_MODIFIED</option>
					<option value="rand">NOO_SORT_RAND</option>
				</field>
				<!--<field 
					name="sort_order" 
					type="list" 
					default="DESC" 
					label="MOD_NOO_TICKER_FIELD_ASC_OR_DESC_LABEL"
					description="MOD_NOO_TICKER_FIELD_ASC_OR_DESC_DESC">
					<option value="ASC">Asc</option>
					<option value="DESC">Desc</option>
				</field>
				--><field
					name="rss_link"
					type="text"
					default=""
					label="MOD_NOO_TICKER_FIELD_RSS_LINK_LABEL"
					description="MOD_NOO_TICKER_FIELD_RSS_LINK_DESC" />
				<field name="external_links" type="textarea" cols="40" rows="10"
					default="" label="MOD_NOO_TICKER_FIELD_EXTERNAL_LINK_LABEL" description="MOD_NOO_TICKER_FIELD_EXTERNAL_LINK_DESC" />
				<field
					name="title_max_chars"
					type="text"
					default="150"
					label="MOD_NOO_TICKER_FIELD_TITLE_MAX_LENGTH_LABEL"
					description="MOD_NOO_TICKER_FIELD_TITLE_MAX_LENGTH_DESC" />
			</fieldset>
			<fieldset
				name="display" addfieldpath="/modules/mod_noo_ticker/elements">
				<field 
					name="animation_type" 
					type="list" 
					default="horizontal_left"
					label="MOD_NOO_TICKER_FIELD_ANIMATION_TYPE_LABEL" description="MOD_NOO_TICKER_FIELD_ANIMATION_TYPE_DESC">
					<option value="opacity">MOD_NOO_TICKER_OPACITY</option>
					<option value="horizontal_left">MOD_NOO_TICKER_HORIZONTAL_LEFT</option>
					<option value="horizontal_right">MOD_NOO_TICKER_HORIZONTAL_RIGHT</option>
					<option value="vertical_up">MOD_NOO_TICKER_VERTICAL_UP</option>
					<option value="vertical_down">MOD_NOO_TICKER_VERTICAL_DOWN</option>
				</field>
				<field
					name="animation_transition"
					type="list"
					default="linear"
					label="MOD_NOO_TICKER_FIELD_ANIMATION_TRANSITION_LABEL"
					description="MOD_NOO_TICKER_FIELD_ANIMATION_TRANSITION_DESC">
					<option value="linear">linear</option>
					<option value="swing">swing</option>
					<option value="easeInQuad">easeInQuad</option>
					<option value="easeOutQuad">easeOutQuad</option>
					<option value="easeInOutQuad">easeInOutQuad</option>
					<option value="easeInCubic">easeInCubic</option>
					<option value="easeOutCubic">easeOutCubic</option>
					<option value="easeInOutCubic">easeInOutCubic</option>
					<option value="easeInQuart">easeInQuart</option>
					<option value="easeOutQuart">easeOutQuart</option>
					<option value="easeInOutQuart">easeInOutQuart</option>
					<option value="easeInQuint">easeInQuint</option>
					<option value="easeOutQuint">easeOutQuint</option>
					<option value="easeInOutQuint">easeInOutQuint</option>
					<option value="easeInExpo">easeInExpo</option>
					<option value="easeOutExpo">easeOutExpo</option>
					<option value="easeInOutExpo">easeInOutExpo</option>
					<option value="easeInSine">easeInSine</option>
					<option value="easeOutSine">easeOutSine</option>
					<option value="easeInOutSine">easeInOutSine</option>
					<option value="easeInCirc">easeInCirc</option>
					<option value="easeOutCirc">easeOutCirc</option>
					<option value="easeInOutCirc">easeInOutCirc</option>
					<option value="easeInElastic">easeInElastic</option>
					<option value="easeOutElastic">easeOutElastic</option>
					<option value="easeInOutElastic">easeInOutElastic</option>
					<option value="easeInBack">easeInBack</option>
					<option value="easeOutBack">easeOutBack</option>
					<option value="easeInOutBack">easeInOutBack</option>
					<option value="easeInBounce">easeInBounce</option>
					<option value="easeOutBounce">easeOutBounce</option>
					<option value="easeInOutBounce">easeInOutBounce</option>
				</field>
				<field name="animation_speed" type="text" default="500" filter="integer"
					label="MOD_NOO_TICKER_FIELD_ANIMATION_DURATION_LABEL" description="MOD_NOO_TICKER_FIELD_ANIMATION_DURATION_DESC" />
				<field name="animation_interval" type="text" default="3000" filter="integer"
					label="MOD_NOO_TICKER_FIELD_ANIMATION_INTERVAL_LABEL" description="MOD_NOO_TICKER_FIELD_ANIMATION_INTERVAL_DESC" />
				<field name="show_headtext" type="JSRadio" default="1" class="btn-group"
					label="MOD_NOO_TICKER_FIELD_SHOW_HEADTEXT_LABEL" description="MOD_NOO_TICKER_FIELD_SHOW_HEADTEXT_DESC">
					<option value="0" sub_fields="" >JNO</option>
					<option value="1" sub_fields="headtext">JYES</option>
				</field>
				
				<field name="headtext" type="text" default="Headlines:" label="MOD_NOO_TICKER_FIELD_HEADTEXT_LABEL"
					description="MOD_NOO_TICKER_FIELD_HEADTEXT_DESC" />
				<field name="show_buttons_control" type="radio" default="0"  class="btn-group"
					label="MOD_NOO_TICKER_FIELD_SHOW_BUTTTONS_CONTROL_LABEL" description="MOD_NOO_TICKER_FIELD_SHOW_BUTTTONS_CONTROL_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
			<fieldset
				name="advanced">
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />

				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
