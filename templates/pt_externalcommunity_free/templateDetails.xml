</positions>

<languages folder="language">
<language tag="en-GB">en-GB/en-GB.tpl_pt_externalcommunity_free.ini</language>
</languages>

<config>
<fields name="params">

<!-- ADVANCED OPTIONS -->
<fieldset name="advanced">
<field name="colorStyle" type="list" default="default" label="Template Color" description="Choose Color Style">
<option value="default">Default</option>
<option value="style1">Style1</option>
<option value="style2">Style2</option>
<option value="style3">Style3</option>
</field>
<!--
<field name="tpl_w" type="text" default="962" label="TEMPLATE_WIDTH" description="TEMPLATE_WIDTH_DESC" />
<field name="left_w" type="text" default="210" label="LEFTCOLUMN_WIDTH" description="LEFTCOLUMN_WIDTH_DESC" />
<field name="right_w" type="text" default="210" label="RIGHTCOLUMN_WIDTH" description="RIGHTCOLUMN_WIDTH_DESC" />
-->
<field name="logoFile" class="" type="media" default="" label="TPL_LOGO_LABEL" description="TPL_LOGO_DESC" />
<field name="sitetitle"  type="text" default="" label="JGLOBAL_TITLE" description="JFIELD_ALT_PAGE_TITLE_LABEL" filter="string" />
<field name="sitedescription"  type="text" default="" label="JGLOBAL_DESCRIPTION" description="JGLOBAL_SUBHEADING_DESC" filter="string" />
<field name="logo_width" type="text" default="324" filter="string" size="20" label="Logo Width" description="Set the width of the logo in px (ex. 250px). Live it empty for default size" />
<field name="logo_height" type="text" default="120" filter="string" size="20" label="Logo Height" description="Set the height of the logo in px (ex. 75px. Live it empty for default size)" />
</fieldset>
<!-- //ADVANCED OPTIONS -->

<!-- SLIDESHOW  -->
<fieldset name="4" label="Slideshow">

<field name="slideshow_use" type="radio" default="0" label="Use Slideshow" description="Enable/Disable Slideshow">
<option value="0">No</option>
<option value="1">Yes</option>
</field>

<field name="slideshow_image1" type="media" default="" label="Slideshow Image 1" description="Slideshow Image 1" />
<field name="slideshow_image2" type="media" default="" label="Slideshow Image 2" description="Slideshow Image 2" />
<field name="slideshow_image3" type="media" default="" label="Slideshow Image 3" description="Slideshow Image 3" />
<field name="slideshow_image4" type="media" default="" label="Slideshow Image 4" description="Slideshow Image 4" />
<field name="slideshow_image5" type="media" default="" label="Slideshow Image 5" description="Slideshow Image 5" />
<field name="slideshow_image6" type="media" default="" label="Slideshow Image 6" description="Slideshow Image 6" />
<field name="slideshow_image7" type="media" default="" label="Slideshow Image 7" description="Slideshow Image 7" />


<field name="caption1" type="textarea" default="" label="Slideshow Image1 text" description="enter a text"  rows="6" cols="20" />
<field name="caption2" type="textarea" default="" label="Slideshow Image2 text" description="enter a text"  rows="6" cols="20" />
<field name="caption3" type="textarea" default="" label="Slideshow Image3 text" description="enter a text"  rows="6" cols="20" />
<field name="caption4" type="textarea" default="" label="Slideshow Image4 text" description="enter a text"  rows="6" cols="20" />
<field name="caption5" type="textarea" default="" label="Slideshow Image5 text" description="enter a text"  rows="6" cols="20" />
<field name="caption6" type="textarea" default="" label="Slideshow Image6 text" description="enter a text"  rows="6" cols="20" />
<field name="caption7" type="textarea" default="" label="Slideshow Image7 text" description="enter a text"  rows="6" cols="20" />


<field name="slideshow_effect" type="checkboxes" default="fade" label="Slideshow Effect" description="Select the Slideshow Effects, random all Effects.">
<option value="random">Random</option>
<option value="sliceDownRight">Down Right</option>
<option value="sliceDownLeft">Down Left</option>
<option value="sliceUpRight">Up Right</option>
<option value="sliceUpLeft">Up Left</option>
<option value="sliceUpDown">Up Down</option>
<option value="sliceUpDownLeft">Down Left</option>
<option value="fold">Fold</option>
<option value="fade">Fade</option>
</field>


<field name="slideshow_slices" type="text" default="15" label="Slices *30" description="Slices 2 - 50 make not more *Default 30" />
<field name="slideshow_animspeed" type="text" default="500" label="Speed *500" description="Speed to next Image *Default 500" />
<field name="slideshow_pausetime" type="text" default="5000" label="Showtime *5000" description="Showtime Image *Default 5000" />


<field name="slideshow_startslide" type="list" default="0" label="Startimage" description="Select Image to start Slideshow.">
<option value="0">1</option>
<option value="1">2</option>
<option value="2">3</option>
<option value="3">4</option>
<option value="4">5</option>
<option value="5">6</option>
<option value="6">7</option>
</field>

<field name="slideshow_controlnav" type="radio" default="0" label="Contol Navigation show" description="Show / hide the Control Navigation.">
<option value="0">Yes</option>
<option value="1">No</option>
</field>
</fieldset>
<!-- //SLIDESHOW  -->

<!-- MODULE OPTIONS -->
<fieldset name="hor_men" label="Horizontal Menu">
<field type="spacer" label="To enable horizontal menu give it nav position" />	
</fieldset>

<!-- MODULE OPTIONS -->
<fieldset name="modl_opt" label="More Options">
<field type="spacer" label="ONLY_PRO" />	

<!-- TEMPLATE WIDTH -->
<field name="fluidContainer" type="radio" class="btn-group" default="0" label="TPL_FLUID_LABEL" description="Choose between static or fullscreen resolution">
<option value="0" disabled="true">TPL_STATIC</option>
<option value="1" disabled="true">TPL_FLUID</option>
</field>

<field name="templateColor" class="" disabled="true" type="color" default="#3b7bb9" label="TPL_COLOR_LABEL" description="Custom template color at your choice" />

<field name="body_textcolor" class="" disabled="true" type="color" default="#333333" label="Body Text Color" description="Choose Body Text Color" />

<field name="responsv" type="radio" class="btn-group" default="0" label="Enable Responsive" description="Eanable/Disable Responsive Layout">
<option value="0" disabled="true">No</option>
<option value="1" disabled="true">Yes</option>
</field>

<field name="bootstrapfw" type="radio" class="btn-group" default="0" label="Load Bootstrap FW" description="Enable/Disable Bootstrap Framework">
<option value="0" disabled="true">No</option>
<option value="1" disabled="true">Yes</option>
</field>

<field name="extens" type="radio" class="btn-group" default="0" label="Enable Extensions" description="Enable Extension Futures">
<option value="0" disabled="true">No</option>
<option value="1" disabled="true">Yes</option>
</field>

<field name="templbg" type="radio" class="btn-group" default="0" label="Template Background" description="Enable/Disable or upload template background">
<option value="0" disabled="true">No</option>
<option value="1" disabled="true">Yes</option>
</field>

<field name="menuopt" type="radio" class="btn-group" default="0" label="Horizontal Menu" description="Increase/Decrease font size">
<option value="0" disabled="true">No</option>
<option value="1" disabled="true">Yes</option>
</field>

<field name="googlfonts" type="radio" class="btn-group" default="0" label="Google Fonts" description="Load more than 600 different google fonts">
<option value="0" disabled="true">No</option>
<option value="1" disabled="true">Yes</option>
</field>

<field name="fontsizee" type="radio" class="btn-group" default="0" label="Font Size" description="Increase/Decrease font size">
<option value="0" disabled="true">No</option>
<option value="1" disabled="true">Yes</option>
</field>

<field name="typogr" type="radio" class="btn-group" default="0" label="Typography" description="Large typography">
<option value="0" disabled="true">No</option>
<option value="1" disabled="true">Yes</option>
</field>

<field name="modposit" type="radio" class="btn-group" default="0" label="Extra Positions" description="Load more positions">
<option value="0" disabled="true">No</option>
<option value="1" disabled="true">Yes</option>
</field>

<field name="analytcss" type="radio" class="btn-group" default="0" label="Google Analytics" description="Google analytics trackging code">
<option value="0" disabled="true">No</option>
<option value="1" disabled="true">Yes</option>
</field>


<field name="copyr_ft" type="radio" class="btn-group" default="0" label="Remove Footer Link" description="Remove footer copyrights">
<option value="0" disabled="true">No</option>
<option value="1" disabled="true">Yes</option>
</field>
</fieldset>

</fields>
</config>
