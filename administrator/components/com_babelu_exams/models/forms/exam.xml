<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL"
			readonly="true" class="readonly" description="JGLOBAL_FIELD_ID_DESC" />

		<field name="title" type="text" class="inputbox"
			label="COM_BABELU_EXAMS_FORM_LBL_EXAM_TITLE" description="COM_BABELU_EXAMS_FORM_DESC_EXAM_TITLE"
			required="true" filter="safehtml" />

		<field name="time_limit" type="text"  class="inputbox"
			label="COM_BABELU_EXAMS_FORM_LBL_EXAM_TIME_LIMIT" description="COM_BABELU_EXAMS_FORM_DESC_EXAM_TIME_LIMIT"
			filter="safehtml" />
		
		<field name="level" type="modal_levels" size="40" class="inputbox"
			label="COM_BABELU_EXAMS_FORM_LBL_EXAM_LEVEL" description="COM_BABELU_EXAMS_FORM_DESC_EXAM_LEVEL"
			default="0" filter="safehtml" />
			
		<field name="level_filter_type" type="list"
			label="COM_BABELU_EXAMS_FORM_LBL_EXAM_LEVEL_FILTER_TYPE" description="COM_BABELU_EXAMS_FORM_DESC_EXAM_LEVEL_FILTER_TYPE"
			default="0">
			<option value="0">COM_BABELU_EXAMS_LEVEL_FILTER_TYPE_ONLY_LEVEL</option>
			<option value="1">COM_BABELU_EXAMS_LEVEL_FILTER_TYPE_LEVEL_AND_ABOVE</option>
			<option value="2">COM_BABELU_EXAMS_LEVEL_FILTER_TYPE_UPTO_LEVEL</option>
		</field>

		<field name="pass_per" type="text"  class="inputbox"
			label="COM_BABELU_EXAMS_FORM_LBL_EXAM_PASS_PER" description="COM_BABELU_EXAMS_FORM_DESC_EXAM_PASS_PER"
			required="true" filter="safehtml" />

		<field name="retake_limit" type="text"  class="inputbox"
			label="COM_BABELU_EXAMS_FORM_LBL_EXAM_RETAKE_LIMIT" description="COM_BABELU_EXAMS_FORM_DESC_EXAM_RETAKE_LIMIT"
			filter="safehtml" />

		<field name="retake_delay" type="text"  class="inputbox"
			label="COM_BABELU_EXAMS_FORM_LBL_EXAM_RETAKE_DELAY" description="COM_BABELU_EXAMS_FORM_DESC_EXAM_RETAKE_DELAY"
			filter="safehtml" />

		<field id="savable" name="savable" type="radio" class="inputbox"
			label="COM_BABELU_EXAMS_FORM_LBL_EXAM_SAVABLE" description="COM_BABELU_EXAMS_FORM_DESC_EXAM_SAVABLE" default="0">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		
		<field id="multisave" name="multisave" type="radio" class="inputbox"
			label="COM_BABELU_EXAMS_FORM_LBL_EXAM_MULTISAVE" description="COM_BABELU_EXAMS_FORM_DESC_EXAM_MULTISAVE" default="0">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		
		<field id="show_chart" name="show_chart" type="radio" class="inputbox"
			label="COM_BABELU_EXAMS_FORM_LBL_EXAM_SHOW_CHART" description="COM_BABELU_EXAMS_FORM_DESC_EXAM_SHOW_CHART" default="0">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field name="grading_option" type="list"
			label="COM_BABELU_EXAMS_FORM_LBL_EXAM_GRADING_OPTION" description="COM_BABELU_EXAMS_FORM_DESC_EXAM_GRADING_OPTION"
			default="0">
			<option value="0">COM_BABELU_EXAMS_COMPUTERIZED</option>
			<option value="1">COM_BABELU_EXAMS_MANUAL</option>
		</field>
		
		<field name="display_option" type="list"
			label="COM_BABELU_EXAMS_FORM_LBL_EXAM_DISPLAY_OPTION" description="COM_BABELU_EXAMS_FORM_DESC_EXAM_DISPLAY_OPTION"
			default="default">
			<option value="default">COM_BABELU_EXAMS_DISPLAY_BY_SECTION</option>
			<option value="single">COM_BABELU_EXAMS_DISPLAY_BY_PROBLEM</option>
		</field>

		<field name="description" type="editor" buttons="true" class="inputbox"
			filter="JComponentHelper::filterText" label="COM_BABELU_EXAMS_FORM_LBL_EXAM_DESCRIPTION"
			description="COM_BABELU_EXAMS_FORM_DESC_EXAM_DESCRIPTION" />

		<field name="catid" type="sql" label="COM_BABELU_EXAMS_FORM_LBL_EXAM_CATID"
			description="COM_BABELU_EXAMS_FORM_DESC_EXAM_CATID"
			query="SELECT 0 AS `id`, '- Please select -' AS `title` UNION SELECT id, title FROM #__babelu_exams_categories"
			key_field="id" value_field="title" />

		<field name="notification_id" type="sql" label="COM_BABELU_EXAMS_FORM_LBL_NOTIFICATION_ID" class="inputbox"
			description="COM_BABELU_EXAMS_FORM_DESC_NOTIFICATION_ID"
			query="SELECT 0 AS `id`, '- Please select -' AS `title` UNION SELECT id, title FROM #__babelu_exams_notification_profiles"
			key_field="id" value_field="title" required="true" />
		
		<field name="state" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC"
			class="inputbox" size="1" default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<field name="access" type="accesslevel" label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC" default="1" class="inputbox" size="1" />
			
		<field name="results_access" type="accesslevel" label="COM_BABELU_EXAMS_RESULTS_ACCESS_LABEL"
			description="COM_BABELU_EXAMS_RESULTS_ACCESS_DESC" default="1" class="inputbox" size="1" />
			
		<field name="can_take_from" 
			   type="text" 
			   class="inputbox" 
			   label="COM_BABELU_EXAMS_FORM_LBL_EXAM_CAN_TAKE_FROM" 
			   description="COM_BABELU_EXAMS_FORM_DESC_EXAM_CAN_TAKE_FROM" 
			   filter="string" default="0000-00-00 00:00:00" />
		
		<field name="can_take_until" type="text" class="inputbox" label="COM_BABELU_EXAMS_FORM_LBL_EXAM_CAN_TAKE_UNTIL" description="COM_BABELU_EXAMS_FORM_DESC_EXAM_CAN_TAKE_UNTIL" filter="string" default="0000-00-00 00:00:00" />

		<field name="checked_out" type="hidden" filter="unset" />
		<field name="checked_out_time" type="hidden" filter="unset" />
	</fieldset>
	
	<fieldset name="accesscontrol">
        <field name="asset_id" type="hidden" filter="unset" />
        <field name="rules"
                type="rules"
                label="JFIELD_RULES_LABEL"
                translate_label="false"
                filter="rules"
                validate="rules"
                class="inputbox"
                component="com_babelu_exams"
                section="exam"
        />
    </fieldset>
</form>
