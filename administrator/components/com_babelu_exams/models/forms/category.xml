<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL"
			readonly="true" class="readonly" description="JGLOBAL_FIELD_ID_DESC" />

		<field name="created_by" type="createdby" default=""
			label="COM_BABELU_EXAMS_FORM_LBL_CATEGORY_CREATED_BY" description="COM_BABELU_EXAMS_FORM_DESC_CATEGORY_CREATED_BY" />

		<field name="title" type="text"
			label="COM_BABELU_EXAMS_FORM_LBL_CATEGORY_TITLE" description="COM_BABELU_EXAMS_FORM_DESC_CATEGORY_TITLE"
			required="true" filter="string" maxlength="90" />

		<field name="access" type="accesslevel"
			label="COM_BABELU_EXAMS_FORM_LBL_CATEGORY_ACCESS" description="COM_BABELU_EXAMS_FORM_DESC_CATEGORY_ACCESS"
			filter="safehtml" />

		<field name="filter_access" type="accesslevel" onchange="this.form.submit();" />

		<field name="description" type="editor" buttons="true" class="inputbox"
			filter="JComponentHelper::filterText" label="COM_BABELU_EXAMS_FORM_LBL_CATEGORY_DESCRIPTION"
			description="COM_BABELU_EXAMS_FORM_DESC_CATEGORY_DESCRIPTION" />

		<field name="state" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC"
			class="inputbox" size="1" default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<field name="checked_out" type="hidden" filter="unset" />
		<field name="checked_out_time" type="hidden" filter="unset" />
	</fieldset>
</form>
