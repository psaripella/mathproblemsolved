<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL"
			readonly="true" class="readonly" description="JGLOBAL_FIELD_ID_DESC" />

		<field name="title" type="text"  class="inputbox"
			label="COM_BABELU_EXAMS_FORM_LBL_SECTION_TITLE" description="COM_BABELU_EXAMS_FORM_DESC_SECTION_TITLE"
			required="true" filter="safehtml" />

		<field name="description" type="editor" buttons="true" class="inputbox"
			filter="JComponentHelper::filterText" label="COM_BABELU_EXAMS_FORM_LBL_SECTION_DESCRIPTION"
			description="COM_BABELU_EXAMS_FORM_DESC_SECTION_DESCRIPTION" />

		<field name="exam_id" type="modal_exam" class="inputbox"
			label="COM_BABELU_EXAMS_FORM_LBL_SECTION_EXAM_ID" description="COM_BABELU_EXAMS_FORM_DESC_SECTION_EXAM_ID"
			required="true" filter="safehtml" />

		<field name="input_type" type="list" size="1" class="inputbox"
			default="0" label="COM_BABELU_EXAMS_FORM_LBL_SECTION_INPUT_TYPE"
			description="COM_BABELU_EXAMS_FORM_DESC_SECTION_INPUT_TYPE" required="true">
			<option value="0">COM_BABELU_EXAMS_PROBLEM_TYPE_RADIO_BUTTON</option>
			<option value="1">COM_BABELU_EXAMS_PROBLEM_TYPE_CHECK_BOX</option>
			<option value="2">COM_BABELU_EXAMS_PROBLEM_TYPE_TEXT_INPUT</option>
			<option value="3">COM_BABELU_EXAMS_PROBLEM_TYPE_TEXT_AREA</option>
		</field>
		
		<field name="use_problem_types" type="radio" class="inputbox"
			default="0" label="COM_BABELU_EXAMS_FORM_LBL_SECTION_USE_PROBLEM_TYPES"
			description="COM_BABELU_EXAMS_FORM_DESC_SECTION_USE_PROBLEM_TYPES">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field name="problem_count" type="text" class="inputbox"
			label="COM_BABELU_EXAMS_FORM_LBL_SECTION_PROBLEM_COUNT" description="COM_BABELU_EXAMS_FORM_DESC_SECTION_PROBLEM_COUNT"
			required="true" filter="safehtml" />

		<field name="randomize" type="radio" class="inputbox" default="1"
			label="COM_BABELU_EXAMS_FORM_LBL_SECTION_RANDOMIZE" description="COM_BABELU_EXAMS_FORM_DESC_SECTION_RANDOMIZE">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field name="default_point_value" type="text" class="inputbox"
			label="COM_BABELU_EXAMS_FORM_LBL_SECTION_DEFAULT_POINT_VALUE"
			description="COM_BABELU_EXAMS_FORM_DESC_SECTION_DEFAULT_POINT_VALUE"
			required="true" filter="safehtml" />

		<field name="case_sensitivity" type="radio" class="inputbox"
			default="1" label="COM_BABELU_EXAMS_FORM_LBL_SECTION_CASE_SENSITIVITY"
			description="COM_BABELU_EXAMS_FORM_DESC_SECTION_CASE_SENSITIVITY">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		
		<field name="level" type="modal_levels" size="40" class="inputbox"
			label="COM_BABELU_EXAMS_FORM_LBL_EXAM_LEVEL" description="COM_BABELU_EXAMS_FORM_DESC_EXAM_LEVEL"
			default="0" filter="safehtml" />
			
		<field name="level_filter_type" type="list"
			label="COM_BABELU_EXAMS_FORM_LBL_EXAM_LEVEL_FILTER_TYPE" description="COM_BABELU_EXAMS_FORM_DESC_EXAM_LEVEL_FILTER_TYPE"
			default="0">
			<option value="0">COM_BABELU_EXAMS_LEVEL_FILTER_TYPE_ONLY_LEVEL</option>
			<option value="1">COM_BABELU_EXAMS_LEVEL_FILTER_TYPE_LEVEL_AND_ABOVE</option>
			<option value="2">COM_BABELU_EXAMS_LEVEL_FILTER_TYPE_UPTO_LEVEL</option>
		</field>
		
		<field name="max_options" type="text" class="inputbox"
			label="COM_BABELU_EXAMS_FORM_LBL_SECTION_MAX_OPTIONS" description="COM_BABELU_EXAMS_FORM_DESC_SECTION_MAX_OPTIONS"
			filter="safehtml" />

		<field name="result_text" type="editor" buttons="true" class="inputbox"
			filter="JComponentHelper::filterText" label="COM_BABELU_EXAMS_FORM_LBL_SECTION_RESULT_TEXT"
			description="COM_BABELU_EXAMS_FORM_DESC_SECTION_RESULT_TEXT" />

		<field name="group_id" type="modal_groups" class="inputbox"
			label="COM_BABELU_EXAMS_FORM_LBL_SECTION_GROUP_ID" description="COM_BABELU_EXAMS_FORM_DESC_SECTION_GROUP_ID"
			required="true" filter="safehtml" />

		<field name="checked_out" type="hidden" filter="unset" />
		<field name="checked_out_time" type="hidden" filter="unset" />
	</fieldset>
</form>
