<?xml version="1.0" encoding="UTF-8"?>
<extension type="component" version="1.6.0" method="upgrade">

	<name>COM_BABELU_EXAMS</name>
	<creationDate>2013-09-06</creationDate>
	<copyright>Copyright (C) 2011. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt
	</license>
	<author>Mathew Lenning</author>
	<authorEmail>mathew.lenning@gmail.com</authorEmail>
	<authorUrl>http://mathewlenning.com</authorUrl>
	<version>1.10.1</version>
	<description>Online exam managment component for the Joomla CMS</description>

	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>

	<update> <!-- Runs on update -->
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<scriptfile>installscript.php</scriptfile>

	<files folder="site">
		<folder>assets</folder>
		<folder>controllers</folder>
		<folder>entity</folder>
		<folder>helpers</folder>
		<folder>html</folder>
		<folder>input</folder>
		<folder>language</folder>
		<folder>mapper</folder>
		<folder>models</folder>
		<folder>repository</folder>
		<folder>specification</folder>
		<folder>utility</folder>
		<folder>views</folder>
		<filename>babelu_exams.php</filename>
		<filename>controller.php</filename>
		<filename>index.html</filename>
		<filename>router.php</filename>
	</files>

	<languages folder="site">
		<language tag="en-GB">language/en-GB.com_babelu_exams.ini</language>
	</languages>

	<media destination="com_babelu_exams" folder="media">
		<filename>index.html</filename>
		<folder>images</folder>
	</media>

	<administration>
		<menu>COM_BABELU_EXAMS</menu>

		<files folder="admin">
			<folder>assets</folder>
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>language</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>utility</folder>
			<folder>views</folder>
			<filename>access.xml</filename>
			<filename>autoloader.php</filename>
			<filename>babelu_exams.php</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
		</files>

		<languages folder="admin">
			<language tag="en-GB">language/en-GB.com_babelu_exams.ini</language>
			<language tag="en-GB">language/en-GB.com_babelu_exams.sys.ini</language>
		</languages>
	</administration>
</extension>