<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fieldset name="message" addfieldpath="/administrator/components/com_vitabook/models/fields" addrulepath="/administrator/components/com_vitabook/models/rules">
        <fields>
            <field
                name="id"
                type="hidden"
                default="0"
            />
            <field
                name="parent_id"
                type="hidden"
                size="4"
                class="inputbox"
                default="1"
                validate="parentid"
            />
            <field
                name="jid"
                type="hidden"
                size="4"
                class="inputbox"
                default=""
            />
            <field
                name="secureform"
                type="text"
                class="vbMessageFormSecureform"
                default=""
                validate="secureform"
            />
            <field
                name="name"
                type="text"
                label="COM_VITABOOK_FORM_NAME"
                labelclass="control-label"
                description="COM_VITABOOK_FORM_NAME_DESC"
                size="40"
                class="inputbox validate-name"
                default=""
                required="true"
                validate="name"
            />
            <field
                name="email"
                type="email"
                label="COM_VITABOOK_FORM_EMAIL"
                labelclass="control-label"
                description="COM_VITABOOK_FORM_EMAIL_DESC"
                size="40"
                class="inputbox"
                default=""
                required="true"
                validate="email"
                filter="email"
            />
            <field
                name="site"
                type="text"
                label="COM_VITABOOK_FORM_SITE"
                labelclass="control-label"
                description="COM_VITABOOK_FORM_SITE_DESC"
                size="40"
                class="inputbox"
                default=""
                validate="url"
                filter="url"
            />
            <field
                name="location"
                type="text"
                label="COM_VITABOOK_FORM_LOCATION"
                labelclass="control-label"
                description="COM_VITABOOK_FORM_LOCATION_DESC"
                size="40"
                class="inputbox"
                default=""
                filter="safehtml"
            />
            <field
                name="date"
                type="hidden"
                format="%Y-%m-%d %H:%M:%S"
                default=""
            />
            <field
                name="message"
                type="vitabookEditor"
                label="COM_VITABOOK_FORM_TEXT"
                labelclass="control-label"
                description="COM_VITABOOK_FORM_TEXT_DESC"
                required="true"
                default=""
                validate="message"
                filter="safehtml"
                class="mceEditor"
            />
            <field
                name="ip"
                type="hidden"
                size="40"
                class="inputbox"
                default=""
            />
            <field
                name="published"
                type="hidden"
                size="1"
                class="inputbox"
                default="0"
            />
            <field
                name="activated"
                type="hidden"
                size="1"
                class="inputbox"
                default="0"
            />
            <field
                name="captcha"
                type="captcha"
                label="COM_VITABOOK_FORM_CAPTCHA"
                labelclass="control-label"
                validate="captcha"
                namespace="message"
            />
        </fields>
    </fieldset>
</form>